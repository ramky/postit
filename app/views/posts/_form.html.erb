<%= render 'shared/validation_errors', instance: @post %>

<div class="well">
	<%= form_for @post  do |f| %>
		<div class="control-group">
			<%= f.label :title %>
			<%= f.text_field :title %>
		</div>

		<div class="control-group">
			<%= f.label :description %>
			<%= f.text_area :description, rows: 5 %>
		</div>

		<div class="control-group">
			<%= f.label :url %>
			<%= f.text_field :url %><br>
		</div>

		<%= f.submit class: "btn btn-primary" %>
	<% end %>
</div>
