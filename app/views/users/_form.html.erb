<div class='well'>
	<%= form_for @user do |f| %>
		<%= render 'shared/validation_errors', instance: @user %>
		<div class='control-group'>
				<%= f.label :username %>
				<%= f.text_field :username %>
		</div>
		<div class='control-group'>
				<%= f.label :password %>
				<%= f.text_field :password %>
		</div>
		<div class='control-group'>
				<%= f.label :timezone %>
				<%= f.time_zone_select :timezone, ActiveSupport::TimeZone.us_zones %>
		</div>

		<%= f.submit @user.new_record? ? 'Register' : 'Update Profile', class: 'btn btn-success' %>	
	<% end %>
</div>